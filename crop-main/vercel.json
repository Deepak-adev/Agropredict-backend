{
    "version": 2,
    "builds": [
        {
            "src": "crop22/wsgi.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "crop22/wsgi.py"
        }
    ],
    "env": {
        "DJANGO_SETTINGS_MODULE": "crop22.settings"  
    }
    
    "buildCommand": "pip install -r requirements.txt && python manage.py collectstatic --noinput",
    "pythonVersion": "3.11"
}
